<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  	
    <TextView
        android:id="@+id/txt_score1"
        android:text=""
        android:layout_centerHorizontal="true"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		style="@style/text_style"
        />
    <TextView
        android:id="@+id/txt_score2"
        android:layout_centerHorizontal="true"
        android:text=""
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
    	android:layout_below="@id/txt_score1"	
   		style="@style/text_style"
        />
    <TextView
        android:id="@+id/txt_score3"
        android:layout_centerHorizontal="true"
        android:text=""
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
    	android:layout_below="@id/txt_score2"	
   		style="@style/text_style"
        />
    
	<!-- Back to menu -->
	<Button
	    android:id="@+id/btn_back"
	    android:text="@string/menu_back"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:onClick="goBack"
	    android:layout_centerInParent="true"	
	    android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
    	android:layout_below="@id/txt_score3"	
    	style="@style/button_text"
	    />
    

</RelativeLayout>
